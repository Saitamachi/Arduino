#include <TinyGPSPlus.h>
#include <SoftwareSerial.h>

// Choose two Arduino pins to use for software serial
const int RXPin = 2;
const int TXPin = 3;

const int GPSBaud = 9600;

// Create a TinyGPS++ object
TinyGPSPlus gps;

// Create a software serial port called "gpsSerial"
SoftwareSerial gpsSerial(RXPin, TXPin);
SoftwareSerial mySerial(4, 7);

void setup()
{
  Serial.begin(9600);
  while(!Serial){;}

  gpsSerial.begin(GPSBaud);
  mySerial.begin(9600);

  mySerial.println("Hi");
}

void loop()
{

  while (gpsSerial.available() > 0)
    if (gps.encode(gpsSerial.read()))
      displayInfo();
  
  if (millis() > 5000 && gps.charsProcessed() < 10)
  {
    mySerial.println("No GPS detected");
    while(true);
  }
  
}

void displayInfo()
{
  if (gps.location.isValid())
  {
    mySerial.print("Latitude: ");
    mySerial.println(gps.location.lat(), 6);
    mySerial.print("Longitude: ");
    mySerial.println(gps.location.lng(), 6);
    mySerial.print("Altitude: ");
    mySerial.println(gps.altitude.meters());
  }
  else
  {
    mySerial.println("Location: Not Available");
  }
  
  mySerial.print("Date: ");
  if (gps.date.isValid())
  {
    mySerial.print(gps.date.month());
    mySerial.print("/");
    mySerial.print(gps.date.day());
    mySerial.print("/");
    mySerial.println(gps.date.year());
  }
  else
  {
    mySerial.println("Not Available");
  }

  mySerial.print("Time: ");
  if (gps.time.isValid())
  {
    if (gps.time.hour() < 10) mySerial.print(F("0"));
    mySerial.print(gps.time.hour());
    mySerial.print(":");
    if (gps.time.minute() < 10) mySerial.print(F("0"));
    mySerial.print(gps.time.minute());
    mySerial.print(":");
    if (gps.time.second() < 10) mySerial.print(F("0"));
    mySerial.print(gps.time.second());
    mySerial.print(".");
    if (gps.time.centisecond() < 10) mySerial.print(F("0"));
    mySerial.println(gps.time.centisecond());
  }
  else
  {
    mySerial.println("Not Available");
  }

  mySerial.println();
  mySerial.println();
  delay(1000);
}
